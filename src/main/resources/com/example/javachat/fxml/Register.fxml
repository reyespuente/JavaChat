<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="357.0" prefWidth="651.0" spacing="12" styleClass="root-pane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javachat.controller.RegisterController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="title" text="Crear Cuenta" />
    <TextField fx:id="nombreUsuario" promptText="Usuario" styleClass="input" />
    <TextField fx:id="nombreCompleto" promptText="Nombre Completo" styleClass="input" />
    <PasswordField fx:id="passwd" promptText="Contraseña" styleClass="input" />
    <PasswordField fx:id="passwdConfirmacion" promptText="Confirmar Contraseña" styleClass="input" />

    <Button onAction="#onRegisterSubmit" styleClass="btn-primary" text="Registrar" />
    <Label fx:id="infoLabel" styleClass="error" textFill="red">
      <font>
         <Font name="Poppins Light" size="12.0" />
      </font></Label>
</VBox>
